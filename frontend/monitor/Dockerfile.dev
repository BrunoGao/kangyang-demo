# 前端开发环境Dockerfile
FROM node:18-alpine

WORKDIR /app

# 安装开发工具
RUN apk add --no-cache git

# 设置npm镜像
RUN npm config set registry https://registry.npmmirror.com/

# 复制package文件
COPY package*.json ./

# 安装依赖
RUN npm install

# 复制源码
COPY . .

# 暴露端口
EXPOSE 3000

# 开发模式启动
CMD ["npm", "run", "dev", "--", "--host", "0.0.0.0"]